<% %w(one two three).each do |name| %>
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: <%= "web-#{name}" %>
spec:
  replicas: 1
  progressDeadlineSeconds: 20
  template:
    metadata:
      labels:
        name: <%= "web-#{name}" %>
    spec:
      containers:
      - name: app
        image: busybox
        imagePullPolicy: IfNotPresent
        command: ["tail", "-f", "/dev/null"]
        ports:
        - containerPort: 80
          name: http
        env:
        - name: GITHUB_REV
          value: "<%= current_sha %>"
---
<% end %>
